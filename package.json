{
  "name": "node-red-contrib-wled2",
  "version": "1.1.0",
  "description": "NodeRed node for WLED control",
  "keywords": [
    "node-red",
    "wled"
  ],
  "node-red": {
    "nodes": {
      "lower-case": "dist/wled2.js"
    }
  },
  "main": "dist/wled2.js",
  "files": [
    "dist/**/*.js",
    "dist/icons/*",
    "dist/*.html"
  ],
  "scripts": {
    "copy:html": "copyfiles -f src/wled2.html dist",
    "copy:icons": "copyfiles icons/* dist",
    "copy:resources": "npm run copy:html && npm run copy:icons",
    "build": "tsc && npm run copy:resources",
    "lint:eslint": "eslint --fix -c .eslintrc.json --ext .ts src/",
    "lint:markdownlint": "node ./node_modules/markdownlint-cli/markdownlint.js **/*.md --ignore node_modules",
    "lint": "npm run eslint && npm run lint:markdownlint",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint",
    "postversion": "git push && git push --tags",
    "version": "npm run format && git add -A src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danecreekphotography/node-red-contrib-wled2.git"
  },
  "author": "Neil Enns",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/danecreekphotography/node-red-contrib-wled2/Issues"
  },
  "homepage": "https://github.com/danecreekphotography/node-red-contrib-wled2#readme",
  "dependencies": {
    "request": "^2.88.2",
    "request-promise-native": "^1.0.8"
  },
  "devDependencies": {
    "@types/node": "^13.1.2",
    "@types/request-promise-native": "^1.0.17",
    "@typescript-eslint/eslint-plugin": "^3.5.0",
    "@typescript-eslint/parser": "^3.5.0",
    "copyfiles": "^2.3.0",
    "eslint": "^7.3.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-notice": "^0.9.10",
    "markdownlint-cli": "^0.21.0",
    "prettier": "^1.19.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.7.4"
  }
}
